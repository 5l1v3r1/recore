{
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "registry": "https://registry.npm.alibaba-inc.com/"
    },
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish"
    }
  },
  "npmClient": "npm",
  "version": "independent"
}
